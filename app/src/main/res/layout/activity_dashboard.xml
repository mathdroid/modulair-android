<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.muhammadmustadi.android.modulairclient.DashboardActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewID"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.cengalabs.flatui.views.FlatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        flatui:fl_space="5dip"
        flatui:fl_theme="@array/deep"
        android:checked="false"
        android:id="@+id/btnLogout"
        android:text="Logout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewID"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.cengalabs.flatui.views.FlatToggleButton
                flatui:fl_space="20dip"
                flatui:fl_theme="@array/deep"
                flatui:fl_cornerRadius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lamp 1"
                android:id="@+id/switch1"
                android:checked="false" />

            <com.cengalabs.flatui.views.FlatToggleButton
                flatui:fl_space="20dip"
                flatui:fl_theme="@array/deep"
                flatui:fl_cornerRadius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lamp 2"
                android:id="@+id/switch2"
                android:checked="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.cengalabs.flatui.views.FlatToggleButton
                flatui:fl_space="20dip"
                flatui:fl_theme="@array/deep"
                flatui:fl_cornerRadius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lamp 3"
                android:id="@+id/switch3"
                android:checked="false" />

            <com.cengalabs.flatui.views.FlatToggleButton
                flatui:fl_space="20dip"
                flatui:fl_theme="@array/deep"
                flatui:fl_cornerRadius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lamp 4"
                android:id="@+id/switch4"
                android:checked="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cengalabs.flatui.views.FlatToggleButton
                flatui:fl_space="20dip"
                flatui:fl_theme="@array/deep"
                flatui:fl_cornerRadius="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:id="@+id/toggle"
                android:text="Lamp 1" />
            <com.cengalabs.flatui.views.FlatButton
                flatui:fl_touchEffect="fl_ripple"
                flatui:fl_theme="@array/deep"
                flatui:fl_blockButtonEffectHeight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mode"
                android:id="@+id/btnMode1" />
            <com.cengalabs.flatui.views.FlatButton
                flatui:fl_touchEffect="fl_ripple"
                flatui:fl_theme="@array/deep"
                flatui:fl_blockButtonEffectHeight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mode"
                android:id="@+id/btnMode2" />
            <com.cengalabs.flatui.views.FlatButton
                flatui:fl_touchEffect="fl_ripple"
                flatui:fl_theme="@array/deep"
                flatui:fl_blockButtonEffectHeight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mode"
                android:id="@+id/btnMode3" />
            <com.cengalabs.flatui.views.FlatButton
                flatui:fl_touchEffect="fl_ripple"
                flatui:fl_theme="@array/deep"
                flatui:fl_blockButtonEffectHeight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mode"
                android:id="@+id/btnMode4" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
