<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/snow_primary"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout"
        >

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/textLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Email Address"
            android:textColor="#000"
            android:inputType="textEmailAddress"
            flatui:fl_fieldStyle="fl_box"
            flatui:fl_theme="@array/deep"/>

        <com.cengalabs.flatui.views.FlatEditText
            android:id="@+id/textPass"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textLogin"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Password"
            android:textColor="#000"
            android:inputType="textPassword"
            flatui:fl_fieldStyle="fl_box"
            flatui:fl_theme="@array/deep"/>

        </RelativeLayout>

    <com.cengalabs.flatui.views.FlatButton
        flatui:fl_touchEffect="fl_ripple"
        flatui:fl_theme="@array/deep"
        flatui:fl_blockButtonEffectHeight="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/btnGet"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textRes"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="M O D U L A I R"
        android:id="@+id/textView"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp" />

</RelativeLayout>
